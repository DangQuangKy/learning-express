<div class="mb-5">
    <img src="https://bizweb.dktcdn.net/thumb/2048x2048/100/453/393/themes/894913/assets/slider_1.png?1707187039390"
        alt="banner" class="w-100 h-100 object-fit-cover">
    <div class="h-auto p-4 bg-green">
        <div class="container d-flex justify-content-between ">
            <div class="box-service">
                <div class="image-service">
                    <img src="https://bizweb.dktcdn.net/100/453/393/themes/894913/assets/service_1.png?1707187039390" alt="">
                </div>
                <div class="content-service">
                    <span class="title-service">Giảng viên uy tín</span>
                    <span class="des-service">Bài học chất lượng</span>
                </div>
            </div>
            <div class="box-service">
                <div class="image-service">
                    <img src="https://bizweb.dktcdn.net/100/453/393/themes/894913/assets/service_2.png?1707187039390" alt="">
                </div>
                <div class="content-service">
                    <span class="title-service">Thanh toán 1 lần</span>
                    <span class="des-service">Học mãi mãi</span>
                </div>
            </div>
            <div class="box-service">
                <div class="image-service">
                    <img src="https://bizweb.dktcdn.net/100/453/393/themes/894913/assets/service_3.png?1707187039390" alt="">
                </div>
                <div class="content-service">
                    <span class="title-service">Học trực tuyến</span>
                    <span class="des-service">Hỗ trợ trực tuyến</span>
                </div>
            </div>
            <div class="box-service">
                <div class="image-service">
                    <img src="https://bizweb.dktcdn.net/100/453/393/themes/894913/assets/service_4.png?1707187039390" alt="">
                </div>
                <div class="content-service">
                    <span class="title-service">Cam kết chất lượng</span>
                    <span class="des-service">Chứng chỉ giáo dục</span>
                </div>
            </div>
           
        </div>
    </div>
    <h2 class="text-center mb-4">Danh sách khóa học</h2>

    <div class="container">
        <div class="row" id="courses-list">
            {{#each courses}}
            <div class="col-sm-6 col-lg-4 mb-4">
                <div class="card card-item h-100">
                    <a href="/courses/{{this.slug}}">
                        <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}">
                    </a>
                    <div class="card-body d-flex flex-column">
                        <a href="/courses/{{this.slug}}">
                            <h5 class="card-title">{{this.name}}</h5>
                        </a>
                        <p class="card-text flex-grow-1">{{this.description}}</p>
                        <a href="#" class="btn btn-primary mt-auto">Buy Course</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    {{!-- phan trang --}}
    <div class="pagination">
        {{#if hasPrevPage}}
        <a href="?page={{prevPage}}&limit=3">&laquo;</a>
        {{else}}
        <span class="disabled">&laquo;</span>
        {{/if}}

        {{#each pages}}
        {{#if isActive}}
        <span class="active">{{number}}</span>
        {{else}}
        <a href="?page={{number}}&limit=3">{{number}}</a>
        {{/if}}
        {{/each}}

        {{#if hasNextPage}}
        <a href="?page={{nextPage}}&limit=3">&raquo;</a>
        {{else}}
        <span class="disabled">&raquo;</span>
        {{/if}}
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Khôi phục vị trí cuộn khi tải trang
        if (localStorage.getItem("scrollPosition")) {
            window.scrollTo(0, localStorage.getItem("scrollPosition"));
        }

        // Bắt sự kiện click vào phân trang
        document.querySelectorAll(".pagination a").forEach(function (link) {
            link.addEventListener("click", function (event) {
                event.preventDefault(); // Ngăn chặn load lại trang
                let scrollPosition = window.scrollY; // Lấy vị trí cuộn hiện tại
                localStorage.setItem("scrollPosition", scrollPosition); // Lưu vào localStorage
                window.location.href = this.href; // Chuyển đến trang mới
            });
        });
    });
</script>

